# Streamlined Veo3 Video Generation Configuration
# Copy this file to .env and fill in your actual values

# Required: Google API Key (get from https://aistudio.google.com/app/apikey)
GOOGLE_API_KEY=your-google-api-key-here

# Optional: Model Configuration
VEO3_MODEL=veo-3.0-fast-generate-preview
GEMINI_MODEL=gemini-2.5-flash

# Optional: Video Generation Defaults
DEFAULT_DURATION_SECONDS=8
DEFAULT_ASPECT_RATIO=16:9
DEFAULT_RESOLUTION=1080p

# Optional: Search Enhancement (Tavily API key)
TAVILY_API_KEY=your-tavily-api-key-here

# Optional: Agent Configuration
DEFAULT_NUM_IDEAS=3
DEFAULT_TEMPERATURE=0.7

# Optional: Safety Settings
ENABLE_ADULT_GENERATION=true
ENABLE_AUDIO_GENERATION=true
ENABLE_PROMPT_ENHANCEMENT=true

# Optional: Development Settings
DEBUG=false
SAVE_INTERMEDIATE_OUTPUTS=true

# Note: No longer requires GOOGLE_CLOUD_PROJECT or GOOGLE_CLOUD_LOCATION!
# This streamlined setup only needs your Google API key.